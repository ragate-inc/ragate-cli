{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "exceptions/*": ["./lib/exceptions/*"],
      "utils/*": ["./lib/utils/*"],
      "types/*": ["lib/types/*"],
      "locale/*": ["lib/locale/*"]
    }
  },
  "include": ["lib/*.ts", "lib/**/*.ts", "webpack.config.ts"]
}
